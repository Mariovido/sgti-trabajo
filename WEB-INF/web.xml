<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
<display-name>Proyecto Final</display-name>
<description>Desarrollo de un juego de cuatro en raya online</description>

<servlet>
<servlet-name>index</servlet-name>
<description>Servlet de la página de inicio</description>
<servlet-class>Index</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>index</servlet-name>
<url-pattern>/inicio</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>registro</servlet-name>
<description>Servlet de la página de registro</description>
<servlet-class>Registro</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>registro</servlet-name>
<url-pattern>/registro</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>login</servlet-name>
<description>Servlet de la página de login</description>
<servlet-class>Login</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>login</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>principal</servlet-name>
<description>Servlet de la página principal</description>
<servlet-class>Principal</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>principal</servlet-name>
<url-pattern>/principal</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>cuenta</servlet-name>
<description>Servlet de la página de la cuenta de usuario</description>
<servlet-class>Cuenta</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>cuenta</servlet-name>
<url-pattern>/cuenta</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>game</servlet-name>
<description>Servlet de la página del juego</description>
<servlet-class>Game</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>game</servlet-name>
<url-pattern>/game</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>nuevaPartida</servlet-name>
<description>Servlet que crea una nueva partida</description>
<servlet-class>Nuevapartida</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>nuevaPartida</servlet-name>
<url-pattern>/nuevaPartida</url-pattern>
</servlet-mapping>

<session-config>
<session-timeout>30</session-timeout>
</session-config>
</web-app>
